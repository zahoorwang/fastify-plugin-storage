{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": ["node", "vitest/globals"],
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "esModuleInterop": true
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"]
}
